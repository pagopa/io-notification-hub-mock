{
  "name": "io-notification-hub-mock",
  "version": "0.0.1",
  "description": "Mock server for Azure notification hub",
  "repository": "https://github.com/pagopa/io-notification-hub-mock",
  "author": "https://www.pagopa.gov.it",
  "license": "MIT",
  "scripts": {
    "clean:dist": "shx rm -rf dist",
    "clean:generated": "shx rm -rf src/generated",
    "generate:definitions": "shx mkdir -p src/generated/definitions && gen-api-models --api-spec ./swagger.yaml --out-dir src/generated/definitions",
    "prebuild": "npm-run-all clean:* generate:definitions",
    "build": "tsc",
    "postversion": "git push && git push --tags",
    "start": "node dist/index.js",
    "test": "dotenv -e env.example -- jest",
    "lint": "tslint --project ."
  },
  "devDependencies": {
    "@types/express": "^4.17.4",
    "@types/jest": "^24.0.13",
    "@types/lowdb": "^1.0.9",
    "@types/node": "10.14.1",
    "@types/nodemailer": "^6.4.0",
    "@types/supertest": "^2.0.8",
    "danger": "^8.0.0",
    "danger-plugin-digitalcitizenship": "*",
    "dotenv-cli": "^3.1.0",
    "italia-tslint-rules": "*",
    "italia-utils": "^4.1.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.12.1",
    "shx": "^0.3.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.1.0",
    "typescript": "^3.5.0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fp-ts": "1.12.0",
    "io-ts": "1.8.5",
    "italia-ts-commons": "^6.3.0",
    "logform": "^2.2.0",
    "lowdb": "^1.0.0",
    "nodemailer": "^6.4.6",
    "winston": "^3.2.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "node",
      "ts",
      "tsx"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "resolutions": {
    "fp-ts": "1.12.0"
  }
}
